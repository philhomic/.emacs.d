; turn off tool-bar

;; Added by Package.el.  This must come before configurations of
;; installed packages.  Don't delete this line.  If you don't want it,
;; just comment it out by adding a semicolon to the start of the line.
;; You may delete these explanatory comments.

;; configure melpa package system
  (when (>= emacs-major-version 24)
    (require 'package)
    (package-initialize)
    (add-to-list 'package-archives '("melpa" . "http://melpa.org/packages/") t)
    )
  (require 'cl)

  ;; add whatever packages you want here
  (defvar philhomic/packages '(
			       company
			       monokai-theme
			       ) "Default packages")
  (defun philhomic/packages-installed-p ()
    (loop for pkg in philhomic/packages
          when (not (package-installed-p pkg)) do (return nil)
          finally (return t)))
  (unless (philhomic/packages-installed-p)
    (message "%s" "Refreshing package database...")
    (package-refresh-contents)
    (dolist (pkg philhomic/packages)
      (when (not (package-installed-p pkg))
        (package-install pkg))))

(tool-bar-mode -1)
;; turn off scroll-bar
(scroll-bar-mode -1)
;; turn on electric-indent-mode
(electric-indent-mode t)
;; open with full screen
(setq initial-frame-alist (quote ((fullscreen . maximized))))

;; show match parentheses
(add-hook 'emacs-lisp-mode-hook 'show-paren-mode)

;; highlight current line
(global-hl-line-mode t)



(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(package-selected-packages (quote (monokai-theme company))))
(custom-set-faces
